{
  "ConnectionStrings": {
    "ApplicationDbConnection": "Server=.\\SQLEXPRESS;Database=ZigitHub;MultipleActiveResultSets=true;Trusted_Connection=True;",
    "HangfireConnection": "Server=.\\SQLEXPRESS;Database=ZigitHubHangfire;MultipleActiveResultSets=true;Trusted_Connection=True;"
  },
  "IdentityServer": {
    "Key": {
      "Type": "Development"
    }
  },
  "JWT": {
    "ValidAudience": "http://localhost:4200",
    "ValidIssuer": "http://localhost:5000",
    "Secret": "JWTAuthenticationHIGHsecuredPasswordVVVp1OH7Xzyr"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=.\\SQLEXPRESS;Database=ZigitHub;MultipleActiveResultSets=true;Trusted_Connection=True;",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true
          },
          "restrictedToMinimumLevel": "Debug",
          "columnOptionsSection": {
            "primaryKeyColumnName": "Id",
            "removeStandardColumns": [ "MessageTemplate" ],
            "additionalColumns": [
              {
                "ColumnName": "UserIdentifier",
                "DataType": "nvarchar",
                "DataLength": 255
              },
              {
                "ColumnName": "Action",
                "DataType": "nvarchar",
                "DataLength": 255
              },
              {
                "ColumnName": "Transaction",
                "DataType": "xml",
                "DataLength": 255
              }
            ]
          }
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:G} {Level:u3} {Transaction} {UserIdentifier} {ClientIp}] {Message} {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "ZigitHub_Api.log",
          "outputTemplate": "[{Timestamp:G} {Level:u3}] {Message} {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
  }
}
